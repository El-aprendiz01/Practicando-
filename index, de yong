    <script>
        /* Script para hacer que la imagen gire constantemente */
        let angulo = 0; // Variable que almacena el ángulo de rotación
        function girarImagen() {
            angulo += 1; // Aumentamos el ángulo en 1 grado
            document.getElementById("imagenGiratoria").style.transform = "rotate(" + angulo + "deg)"; // Aplicamos la rotación
            requestAnimationFrame(girarImagen); // Llamamos a la función de nuevo para que el giro sea continuo
        }
        
        girarImagen(); // Llamamos a la función para iniciar la animación
    </script>
